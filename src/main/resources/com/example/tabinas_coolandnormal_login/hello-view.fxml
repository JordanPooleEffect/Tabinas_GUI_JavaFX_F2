<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<AnchorPane xmlns="http://javafx.com/javafx/17.0.2-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.tabinas_coolandnormal_login.HelloController">
    <children>
        <VBox fx:id="pnLogin" alignment="CENTER" prefHeight="333.0" prefWidth="420.0" spacing="20.0">
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
            <Label prefHeight="36.0" prefWidth="121.0" text="WELCOME">
                <font>
                    <Font size="25.0" />
                </font>
            </Label>
            <GridPane prefHeight="134.0" prefWidth="262.0">
                <columnConstraints>
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                    <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
                </columnConstraints>
                <rowConstraints>
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                    <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                </rowConstraints>
                <children>
                    <Label alignment="CENTER" text="User Name:">
                        <font>
                            <Font size="20.0" />
                        </font>
                    </Label>
                    <Label text="Password:" GridPane.rowIndex="1">
                        <font>
                            <Font size="20.0" />
                        </font>
                    </Label>
                    <TextField fx:id="fieldUsername" prefHeight="41.0" prefWidth="130.0" GridPane.columnIndex="1" />
                    <TextField fx:id="fieldPassword" prefHeight="40.0" prefWidth="151.0" GridPane.columnIndex="1" GridPane.rowIndex="1" />
                </children>
            </GridPane>
            <Button fx:id="btnSignin" alignment="CENTER" onMouseClicked="#userLogin" prefHeight="27.0" prefWidth="87.0" text="Sign In">
                <font>
                    <Font size="18.0" />
                </font>
            </Button>
            <!--<Button fx:id="btnDarkMode" onMouseClicked="#toggleDarkMode" prefHeight="27.0" prefWidth="100.0" text="Dark Mode">
                <font>
                    <Font size="18.0" />
                </font>
            </Button>-->
            <Label fx:id="MessageText" />
        </VBox>
    </children>
</AnchorPane>